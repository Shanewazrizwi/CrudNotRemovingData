@model IEnumerable<CrudWithDepInjec.Models.Products>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="Create" asp-controller="Product" class="btn btn-info">Create</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>

            <td>@p.Id</td>
            <td>@p.Product</td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@p.Id">Delete</a>

                <a class="btn btn-primary" asp-action="Update" asp-controller="Product" asp-route-id="@p.Id">Update</a>
            </td>
        </tr>
    }
</table>